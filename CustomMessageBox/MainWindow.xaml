<Window x:Class="CustomMessageBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="CustomDialogSample"
    Height="300"
    Width="300">
    <StackPanel>
        <Button
            Margin="5"
            x:Name="btnOne"
            Content="Question 2 buttons with details" Click="BtnOneClick1"/>
        <Button
            Margin="5"
            x:Name="btnTwo"
            Content="Info. 1 button no details" Click="BtnTwoClick1"/>
        <Button
            Margin="5"
            x:Name="btnThree"
            Content="Warning 1 button with details" Click="BtnThreeClick1" />
        <Button
            Margin="5"
            x:Name="btnFour"
            Content="Stop 2 buttons no details"
            Click="btnFour_Click_1"/>
        <Button
            Margin="5"
            x:Name="btnFive"
            Content="Question 3 buttons no details"
            Click="btnFive_Click_1" />
        <Button
            Margin="5"
            x:Name="btnSix"
            Content="Shield 1 button with details"
            Click="btnSix_Click_1"/>
        <TextBlock
            Margin="10"
            x:Name="tbResults"
            Text="Click buttons to test dialog" />
    </StackPanel>
</Window>
